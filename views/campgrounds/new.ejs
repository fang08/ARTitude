<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <h1>Please Create a New Campground</h1>
  </div>

  <div class="row">
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <label>New Campground Name:</label>
        <input type="text" name="campground[name]" class="form-control" placeholder="name">
      </div>
      <div class="form-group">
        <label>Image URL:</label>
        <input type="text" name="campground[image]" class="form-control" placeholder="url">
      </div>
      <div class="form-group">
        <label>Campground Description:</label>
        <input type="text" name="campground[description]" class="form-control" placeholder="description">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success btn-block">Submit!</button>
      </div>
    </form>
  </div>
  
  <a href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer") %>