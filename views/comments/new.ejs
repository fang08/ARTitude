<%- include("../partials/header") %>


<h1 style="text-align: center">Please Add a New Comment to <em><%= artwork.name %></em></h1>

<div style="width: 30%; margin: 25px auto;">
  <form action="/artworks/<%= artwork._id %>/comments" method="POST">
    <div class="form-group">
      <label>New Comments:</label>
      <input type="text" name="comment[text]" class="form-control" placeholder="put comments here">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success btn-block">Submit!</button>
    </div>
  </form>
  
  <a href="/artworks">Go Back</a>
</div>

<%- include("../partials/footer") %>