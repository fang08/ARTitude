<%- include("../partials/header") %>


<h1 style="text-align: center">Edit Your Comment Here:</h1>

<div style="width: 30%; margin: 25px auto;">
  <form action="/artworks/<%= artwork_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label>Comments:</label>
      <input type="text" name="comment[text]" class="form-control" value="<%= comment.text %>">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success btn-block">Submit!</button>
    </div>
  </form>
  
  <a href="/artworks">Go Back</a>
</div>

